	<link rel="mask-icon" href="/docs/4.5/assets/img/favicons/safari-pinned-tab.svg" color="#563d7c">
	<link rel="icon" href="/docs/4.5/assets/img/favicons/favicon.ico">
</head>
<body>
	<div class="mega">
	<div class="jumbotron jumbotron-main">
		<nav class="navbar navbar-expand-md mb-4">
		  <a class="navbar-brand" href="#">Contact Book</a>
		  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
		    <span class="navbar-toggler-icon"></span>
		  </button>
		  	<div class="collapse navbar-collapse" id="navbarCollapse">
		    	<ul class="navbar-nav mr-auto">
		     		<li class="nav-item active">
		        		<a class="nav-link" href="http://localhost:3000/users/login">Home <span class="sr-only">(current)</span></a>
		      		</li>
		      		<li class="nav-item">
		       			<a class="nav-link" href="http://localhost:3000/users/about" >About</a>
		     		</li>
		     		<li class="nav-item">
		       			<a class="nav-link" href="http://localhost:3000/users/register" >Register</a>
		     		</li>
		    	</ul>
		    	
		  	</div>
		</nav>
		<div>
			
			<form method="post" action="/users/register" class="form-signin">
			  <h1 class="h3 mb-3 font-weight-normal">Please register by filling up all the details</h1>
			  <br>
			  <% if(locals.errors) { %>
				<% errors.forEach(function(error){ %>
					<div class="alert alert-danger"><%= error.msg %></div>
				<% }) %>
			<% } %>
			          <div class="col-md-6 mb-3">
			            <label for="firstName">Name</label>
			            <input type="text" class="form-control" name="name" placeholder="name" value="<%= (!!locals.name)?name:'' %>" required>
			            <div class="invalid-feedback">
			              Valid first name is required.
			            </div>
			        
			        <br>
			         <br>

			        <div class="mb-3">
			          <label for="username">Username</label>
			          <div class="input-group">
				            <div class="input-group-prepend">
				              <span class="input-group-text">@</span>
				            </div>
			            <input type="text" class="form-control" name="username" placeholder="Username"  value="<%= (!!locals.username)?username:'' %>" required> 
				            <div class="invalid-feedback" style="width: 100%;">
				              Your username is required.
				            </div>
			          </div>
			        </div>
			         <br>
			         <br>

			        <div class="mb-3">
			          <label for="email">Email <span class="text-muted" required></span></label>
			          <input type="email" class="form-control" name="email" placeholder="you@example.com" value="<%= (!!locals.email)?email:'' %>" >
				          <div class="invalid-feedback">
				            Please enter a valid email address for shipping updates.
				          </div>
			        </div>
			         <br>
			         <br>

			        <div class="mb-3">
			          <label for="password">Password</label>
			          <input type="password" class="form-control" name="password" placeholder="" value="<%= (!!locals.password)?password:'' %>"  required>
				          <div class="invalid-feedback">
				            Please enter your desired password.
				          </div>
			        </div>
			         <br>
			         <br>

			        <div class="mb-3">
			          <label for="address2">Confirm password</label>
			          <input type="Password" class="form-control" name="password2" placeholder="" value="<%= (!!locals.password2)?password2:'' %>" >
			        </div>
			         <br>
			         <br>

			        <div>
			    		<a href="http://localhost:3000/users/login" style="color:black">Have an account?</a>
			  		</div>
			  		
			     <button class="btn btn-primary" type="submit">Sign up</button>
			</form>
		</div>
	</div>
</div>
</body>

<footer class="footer mt-auto py-3">
  <div class="container">
    <span class="text-muted">17XJ1A0508</span>
  </div>
</footer>
